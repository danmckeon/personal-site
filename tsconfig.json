{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,

    "pretty": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,

    "removeComments": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "importHelpers": true,

    "typeRoots": ["./node_modules/@types", "./typings"],

    // see https://github.com/Microsoft/TypeScript/issues/25260
    // can probably remove once we upgrade to mui-1.x?
    "keyofStringsOnly": true,

    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
